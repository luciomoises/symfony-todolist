{% extends 'base.html.twig' %}

{% block title %}Sign In{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/signin.css') }}">
{% endblock %}

{% block body %}

<form class="form-signin" action="{{ path('login') }}" method="POST">

    <img class="mb-4" src="{{ asset('imgs/bootstrap-solid.svg') }}" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    {% if error %}
        <div class="alert alert-danger">
            Invalid email or password
        </div>
    {% endif %}
    <label for="_username" class="sr-only">Email address</label>
    <input type="email" id="_username" name="_username" class="form-control" placeholder="Email address" required="" autofocus="">
    <label for="_password" class="sr-only">Password</label>
    <input type="password" id="_password" name="_password" class="form-control" placeholder="Password" required="">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <a href="{{ path('register')}}" class="btn btn-lg btn-warning btn-block">Register</a>
  </form>
{% endblock %}
